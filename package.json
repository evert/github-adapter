{
  "name": "github-adapter",
  "display_name": "Github",
  "version": "0.1.1",
  "description": "Watch your favourite github repos",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/github-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/github-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/github-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "github-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "schema": {
      "type": "object",
      "required": [
        "repos"
      ],
      "properties": {
        "repos": {
          "type": "array",
          "title": "This list of repositories that should be watched",
          "items": {
            "type": "string",
            "title": "A repository (e.g. mozilla-iot/gateway)",
            "examples": [
              "mozilla-iot/gateway"
            ]
          }
        }
      }
    }
  },
  "dependencies": {
    "node-fetch": "^2.5.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "babel-eslint": "^10.0.1"
  }
}
